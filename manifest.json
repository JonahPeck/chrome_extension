{
"manifest_version": 3,
"name": "Salesforce Data Scraper",
"version": "1.0",
"permissions": [
    "activeTab",
    "scripting"
    ],
    "action": {
    "default_popup": "popup.html"
    },
    "background": {
    "service_worker": "scripts/background.js"
    },
    "content_scripts": [
    {
        "matches": [
            "https://nutrislice.lightning.force.com/*",
            "https://*.salesforce.com/*",
            "https://*.lightning.force.com/*"
        ], 
        "js": ["scripts/content.js"]
    }
    ]
}
